{
  "compilerOptions": {
    // 指定 TypeScript 构建信息文件的位置
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    // 设置 JavaScript 语言版本为 ES2020
    "target": "ES2020",
    // 启用类字段的定义字段语法
    "useDefineForClassFields": true,
    // 设置模块系统为 ESNext
    "module": "ESNext",
    // 指定库文件
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    // 跳过库检查
    "skipLibCheck": true,
    /* 打包模式 */
    "moduleResolution": "bundler",
    // 允许导入带有 .ts 扩展名的模块
    "allowImportingTsExtensions": true,
    // 启用独立模块编译
    "isolatedModules": true,
    // 强制模块检测
    "moduleDetection": "force",
    // 不生成输出文件
    "noEmit": true,
    // 保留 JSX 语法
    "jsx": "preserve",
    /* 代码检查 */
    "strict": true,
    // 禁止未使用的局部变量
    "noUnusedLocals": true,
    // 禁止未使用的参数
    "noUnusedParameters": true,
    // 禁止 switch 语句中的 fallthrough 情况
    "noFallthroughCasesInSwitch": true,
    // 禁止未检查副作用的导入
    "noUncheckedSideEffectImports": true,
    // 指定路径别名
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  // 包含的文件模式
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}

